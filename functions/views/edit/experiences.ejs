<!doctype html>
<html lang="en">
  <head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
    <link href="../styles/style.css" rel="stylesheet">
    <title>Edit Resume - Profile</title>
  </head>
  <body data-bs-theme="dark">

      <!-- side bar -->
      <%- include('partials/sidebar.ejs') %>
      <!-- end side bar -->

      <!-- main content -->
      <main class="flex-grow-1 p-4">
        <div class="position-fixed top-0 end-0 p-4 z-3">
          <button class="btn btn-secondary d-block d-md-none" id="sidebar-toggler">Menu</button>
        </div>
        <h1 class="mb-4 m-md-4">Experiences</h1>
        <form action="" method="post" class="pb-5">
          <div class="container px-0 px-md-5" style="max-width: 1024px;">

            <div id="jobs-input">
              <div id="job-div" class="border rounded-3 p-3 mb-4">
                <div class="mb-3 d-flex flex-column flex-lg-row align-items-start align-items-lg-center">
                  <label class="form-label" style="width: 110px;">Title</label>
                  <input type="text" class="form-control" id="name" name="name">
                </div>
                <div class="mb-3 d-flex flex-column flex-lg-row align-items-start align-items-lg-center">
                  <label class="form-label" style="width: 110px;">Company</label>
                  <input type="text" class="form-control" id="name" name="name">
                </div>

                <div class="input-group mb-3">
                  <span class="input-group-text">From</span>
                  <input type="date" aria-label="First name" class="form-control">
                  <span class="input-group-text">To</span>
                  <input type="date" aria-label="Last name" class="form-control">
                </div>

                <div class="form-floating mb-3">
                  <textarea class="form-control" placeholder="Descriptions" id="about-textarea" style="height: 150px"></textarea>
                  <label for="about-textarea"></label>
                </div>
                <div class="d-flex flex-row-reverse">
                  <button button type="button" class="btn btn-sm btn-outline-danger">Remove</button>
                </div>
              </div>
            </div>

            <div class="d-flex flex-column-reverse flex-sm-row justify-content-between align-items-sm-baseline">
              <input type="submit" class="btn btn-primary mt-3 px-5" value="Save">
              <button type="button" class="btn btn-outline-info" id="add-more-work-btn">Add more work</button>
            </div>
          </div>
        </form>
      </main>
      <!-- end main content -->

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
    <script src="../scripts/sidebarToggle_script.js"></script>
    <script>
      const addMoreWorkBtn = document.getElementById('add-more-work-btn');
      const jobsInput = document.getElementById('jobs-input');
      const jobDiv = document.getElementById('job-div');

      addMoreWorkBtn.addEventListener('click', () => {
        const newJobDiv = jobDiv.cloneNode(true);
        jobsInput.appendChild(newJobDiv);
      });

    </script>
  </body>
</html>